<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:csharpPrjkt.ViewModels"
             x:Class="csharpPrjkt.Views.MainPage"
             Title="Könyvtár">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Új" Command="{Binding AddBookCommand}" />
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="*, Auto">
        <CollectionView Grid.Row="0" ItemsSource="{Binding Books}" SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="10" Padding="10" BorderColor="Gray">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MainViewModel}}, Path=BookTappedCommand}" CommandParameter="{Binding .}" />
                        </Frame.GestureRecognizers>
                        <VerticalStackLayout>
                            <Label Text="{Binding Title}" FontSize="18" FontAttributes="Bold" />
                            <Label Text="{Binding Author}" FontSize="14" TextColor="Gray" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        
        <ActivityIndicator Grid.Row="0" IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" HorizontalOptions="Center" VerticalOptions="Center" Color="Blue" />
    </Grid>
</ContentPage>
